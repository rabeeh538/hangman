<!-- res/layout/activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:pointerIcon="zoom_in"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <!-- Space for the game word -->

    <!-- Space for the hangman graphics -->

    <!-- Timer space -->

    <!-- Keyboard layout -->


    <Button
        android:id="@+id/hint"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="157dp"
        android:layout_marginBottom="211dp"
        android:layout_toStartOf="@+id/mic"
        android:text="Hint" />

    <Button
        android:id="@+id/mic"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="214dp"
        android:pointerIcon="zoom_in"
        app:icon="@android:drawable/ic_btn_speak_now"
        app:iconPadding="0.1dp"
        app:iconSize="30dp" />

    <TextView
        android:id="@+id/word_space"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/keyboard_layout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="118dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="156dp"
        android:text="H _ N G M _ N"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/hangman_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/keyboard_layout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="106dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="242dp"
        android:src="@drawable/img" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hangman_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="153dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="16dp"
        android:text="Time: 60"
        android:textSize="18sp" />


    <LinearLayout
        android:id="@+id/keyboard_layout"
        android:layout_width="400dp"
        android:layout_height="209dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- First row: Q to P -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonQ"
                style="@style/KeyboardButton"
                android:ellipsize="middle"
                android:text="Q" />

            <Button
                android:id="@+id/buttonW"
                style="@style/KeyboardButton"
                android:ellipsize="middle"
                android:text="W" />

            <Button
                android:id="@+id/buttonE"
                style="@style/KeyboardButton"
                android:ellipsize="middle"
                android:text="E" />

            <Button
                android:id="@+id/buttonR"
                style="@style/KeyboardButton"
                android:ellipsize="middle"
                android:text="R" />

            <Button
                android:id="@+id/buttonT"
                style="@style/KeyboardButton"
                android:text="T" />

            <Button
                android:id="@+id/buttonY"
                style="@style/KeyboardButton"
                android:text="Y" />

            <Button
                android:id="@+id/buttonU"
                style="@style/KeyboardButton"
                android:text="U" />

            <Button
                android:id="@+id/buttonI"
                style="@style/KeyboardButton"
                android:text="I" />

            <Button
                android:id="@+id/buttonO"
                style="@style/KeyboardButton"
                android:text="O" />

            <Button
                android:id="@+id/buttonP"
                style="@style/KeyboardButton"
                android:text="P" />

        </LinearLayout>

        <!-- Second row: A to L -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonA"
                style="@style/KeyboardButton"
                android:text="A" />

            <Button
                android:id="@+id/buttonS"
                style="@style/KeyboardButton"
                android:text="S" />

            <Button
                android:id="@+id/buttonD"
                style="@style/KeyboardButton"
                android:text="D" />

            <Button
                android:id="@+id/buttonF"
                style="@style/KeyboardButton"
                android:text="F" />

            <Button
                android:id="@+id/buttonG"
                style="@style/KeyboardButton"
                android:text="G" />

            <Button
                android:id="@+id/buttonH"
                style="@style/KeyboardButton"
                android:text="H" />

            <Button
                android:id="@+id/buttonJ"
                style="@style/KeyboardButton"
                android:text="J" />

            <Button
                android:id="@+id/buttonK"
                style="@style/KeyboardButton"
                android:text="K" />

            <Button
                android:id="@+id/buttonL"
                style="@style/KeyboardButton"
                android:text="L" />

        </LinearLayout>

        <!-- Third row: Z to M -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonZ"
                style="@style/KeyboardButton"
                android:text="Z" />

            <Button
                android:id="@+id/buttonX"
                style="@style/KeyboardButton"
                android:text="X" />

            <Button
                android:id="@+id/buttonC"
                style="@style/KeyboardButton"
                android:text="C" />

            <Button
                android:id="@+id/buttonV"
                style="@style/KeyboardButton"
                android:text="V" />

            <Button
                android:id="@+id/buttonB"
                style="@style/KeyboardButton"
                android:text="B" />

            <Button
                android:id="@+id/buttonN"
                style="@style/KeyboardButton"
                android:text="N" />

            <Button
                android:id="@+id/buttonM"
                style="@style/KeyboardButton"
                android:text="M" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/pause"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="25dp"
        app:icon="@android:drawable/ic_media_pause"
        app:iconPadding="8dp"
        app:iconSize="27dp" />


</RelativeLayout>
